<%= render 'shared/three_steps_navbar', step: step %> <!-- must be step 1 because choosing Project doesn´t count -->
<!-- this must be the banner of projects pictures -->
<div class="header-carousel">
  <%= render 'shared/carousel', pictures: @project.photos, carousel_id: "Project#{@project.id}", no_buttons: true, no_lightbox_button: false %>
</div>
<!-- the quote -->

<div class="project-short-description">
  <div class="location-name">
    <span>STACEY</span>
    <span><%= @project.name %></span>
  </div>
  <span class="description"><%= @project.descriptions.where(field: 'project info index').first.content %></span>
</div>
<div class="common-space-info">
  <p class="info-header">The Community Space</p>
  <span class="description">At STACEY we believe that beautifully designed spaces bring people together. Whether you’re looking to mingle with new people, get creative in the kitchen or open yourself up to new experiences, our Mühlenkamp location can give you all this and more.</span>
  <span>Our 100m2 of community space at ground level comes with:</span>
  <ul class="common-space-amenities">
    <% @project_show_amenities.each do |amenity| %>
      <%= cl_image_tag amenity.photo.key, style: 'width: 20px' %>
      <li><%= amenity.title %></li>
    <% end %>
  </ul>
</div>
<div class="cards-wrapper">
  <p class="suites-header">The Suites</p>
  <div class="cards-container">
    <%# 6.times do %>
    <% @roomtypes.each_with_index do |roomtype, index| %>
      <div class="stacey-card" id='room-card'>
        <div class="availability">
          <span>Available</span>
          <span><%= @room_availability_hash[roomtype.name] %></span>
        </div>
        <%= render 'shared/carousel', pictures: roomtype.photos, carousel_id: "Room#{roomtype.id}", no_lightbox_button: true, no_buttons: false %>
        <div class="stacey-card-header">
          <span class="name"><%= roomtype.name.titleize %></span>
          <span class="price">from €<%= roomtype.prices.first.amount % 1 == 0 ? roomtype.prices.first.amount.to_i : roomtype.prices.first %></span>
        </div>
        <% roomtype_index_amenities = [] %>
        <% roomtype.join_amenities.each{|ja| roomtype_index_amenities << ja.amenity if ja.name == 'roomtype index inventory' } %>
        <% roomtype.join_amenities.each{|ja| roomtype_index_amenities << ja.amenity if ja.name == 'roomtype index inclusion' } %>
        <%= render 'shared/amenities', amenities: roomtype_index_amenities %>
        <%= link_to "Explore", booking_process_path(@booking, 'room', roomtype_id: roomtype.id), class: 'stacey-card-button stacey-button reverse-hover' %>
      </div>
    <% end %>
    <%# end %>
  </div>
</div>
<% if current_user.present? && current_user.admin? %>
  <%= link_to 'Create new Roomtype', new_project_roomtype_path(@project), class: "stacey-button" %>
<% end %>

<div class="common-space-info">
  <p class="info-header">The Location</p>
  <span class="description"><%= @project.address.description.content %></span>
</div>

<div id="map"
     style="margin: 0 50px; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%= render 'shared/footer' %>
