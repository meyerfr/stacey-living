          <span class="amenity">Netflix</span>
          <span class="amenity">Kitchen</span>
          <span class="amenity">Tabletennis</span>
        </div> -->

        <%= link_to "Explore", booking_process_path(@booking, 'rooms', project_id: project.id), class: 'stacey-card-button stacey-button reverse-hover' %>
      </div>
    <% end %>
    <%# end %>
  </div>
</div>

<div id="map"
     style="margin: 0 50px; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<% if current_user.present? && current_user.admin? %>
  <%= link_to 'Create new Project', projects_path, method: :post, class: "stacey-button" %>
<% end %>

