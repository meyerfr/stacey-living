<%= render 'shared/three_steps_navbar', step: step %>
<div class="cards-wrapper">
  <div class="project-choose">
    <h2>Where do you want to live next?</h2>
  </div>
  <div class="cards-container">
    <%# 8.times do %>
    <% @projects.each_with_index do |project, index| %>
      <div class="stacey-card flat-card">
        <%= render 'shared/carousel', pictures: (project.photos + project.community_areas.first.photos), carousel_id: "project#{project.id}", no_lightbox_button: false, no_buttons: true %>
        <div class="stacey-card-header">
          <div class="name">
            <span>STACEY</span>
            <span><%= project.name %></span>
          </div>
          <span class="price">from â‚¬<%= project.roomtypes.find_by(name: 'Mighty').prices.first.amount.to_i  %></span>
        </div>
        <div class="amenities">
          <%= render 'shared/amenities', amenities: @project_index_amenities %>
        </div>
        <%= link_to "Explore", booking_process_path(@booking, @booking.booking_auth_token, 'rooms', project_id: project.id), class: 'stacey-card-button stacey-button reverse-hover' %>
      </div>
    <% end %>
    <%# end %>
  </div>
</div>

<%= render 'shared/map', markers: @markers, myclass: 'projects-map' %>

<% if current_user.present? && current_user.admin? %>
  <%= link_to 'Create new Project', projects_path, method: :post, class: "stacey-button" %>
<% end %>

<%= render 'shared/footer' %>
