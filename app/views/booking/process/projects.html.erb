<div class="cards-wrapper">
  <div class="project-choose">
    <h2>Where do you want to live next?</h2>
  </div>
  <div class="cards-container">
    <%# 8.times do %>
    <% @projects.each_with_index do |project, index| %>
      <div class="stacey-card flat-card">
        <%= render 'shared/carousel', pictures: project.photos, carousel_id: "project#{project.id}", no_lightbox_button: false, no_buttons: true %>
        <div class="stacey-card-header">
          <div class="name">
            <span>STACEY</span>
            <span><%= project.name %></span>
          </div>
          <span class="price">from â‚¬<%= project.roomtypes.find_by(name: 'Mighty').prices.first.amount.to_i  %></span>
        </div>
        <%= render 'shared/amenities', amenities: @project_index_amenities %>
        <!-- <div class="amenities">
          <span class="amenity">Furnished</span>
