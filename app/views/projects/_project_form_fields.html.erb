<%= f.input :description, label: 'Please describe this Project' %>
<div class="form-group img_prev">
  <!-- <img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail d-none"/> <br/> -->
  <%= f.label :pictures, 'Upload project images' %>
  <div class="pictures d-flex"></div>
  <%#= f.file_field :pictures, multiple: true, class: "picture-upload", id: 'project_pictures_button' %>
  <%#= f.hidden_field :pictures, multiple: true, id: 'project_pictures_hidden' %>
  <%= f.input :photos, as: :file, label: false, input_html: { multiple: true, class: 'picture-upload' } %>
</div>
<%= f.simple_fields_for :projectAmenities do |pa| %>
  <%= pa.label 'Choose Projects Amenities' %>
  <div class="project-amenities">
    <% amenities.each_with_index do |amenity, index| %>
      <label>
        <%= pa.check_box("amenity_id", { name: "project[project_amenities_attributes][#{index}][amenity_id]", id: "project_amenities_attributes_#{index}_amenity_id" }, amenity.id, nil) %>
        <%= amenity.title %>
      </label>
    <% end %>
  </div>
<% end %>
<%#= f.collection_check_boxes(:project, amenities, :title, {}) %>
<%= f.simple_fields_for :roomtypes do |builder| %>
  <%= render 'roomtype_fields', f: builder, amenities: amenities %>
<% end %>
<div class="form-actions">
  <%= link_to_add_row('Add Roomtype', f, :roomtypes, amenities: amenities, class: 'btn stacey-button add-room-type') %>
  <%= f.submit class: 'create-project-button stacey-button reverse-hover' %>
</div>
