<%= f.input :name, label: 'Name of Project' %>
<%= f.simple_fields_for @address do |a| %>
  <div class="inline">
    <%= a.input :street %>
    <%= a.input :number %>
  </div>
  <div class="inline">
    <%= a.input :city %>
    <%= a.input :zip %>
  </div>
  <%= a.input :country, as: :string, input_html: { value: 'Germany' } %>
  <%= a.simple_fields_for @address_description do |desc| %>
    <%= desc.label 'Describe the Address (Location)' %>
    <%= desc.input :field %>
    <%= desc.input :content %>
  <% end %>
<% end %>

