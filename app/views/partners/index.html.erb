      <span>We have <%= @partners.count %> <%= @partners.count > 1 ? 'partner-applications.' : 'partner-application.' %></span>
      <div class="query">
        <%= form_tag partners_path, method: :get do %>
          <%= text_field_tag :search,
          params[:search],
          class: "form-control",
            placeholder: "Find a partner"
            %>
            <%= submit_tag "Search", class: "btn btn-primary d-none" %>
        <% end %>
      </div>
    </div>
    <div class="list-container">
      <% @partners.each do |partner| %>
        <div class="list-context-container">
          <div class="list-info">
            <span class="set-width"><%= partner.name %></span>
            <span class="set-width"><%= partner.company %></span>
            <span class="set-width"><%= partner.email %></span>
            <div class="details d-flex set-width">
              <i class="fas fa-caret-right"></i>
              <i class="fas fa-caret-down d-none"></i>
              <span>Details</span>
            </div>
          </div>
          <div class="list-detail d-none">
            <ul>
              <li>Phone: <%= partner.phone_code %> <%= partner.phone %></li>
              <li>Message: <%= partner.message %></li>
            </ul>
          </div>
        </div>
