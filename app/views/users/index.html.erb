<h3 class="list-header">All Users</h3>
<div class="list-position">
  <div class="list-wrapper">
    <div class="list-navbar">
      <div class="one-list-navbar">
        <div class="options">
          <% @user_group_param_options.each do |param_option| %>
            <% if @user_group_param == param_option || !@user_group_param.present? && param_option == 'all' %>
              <%= link_to param_option.capitalize, users_path(user_group: param_option), class: 'option active' %>
            <% else %>
              <%= link_to param_option.capitalize, users_path(user_group: param_option), class: 'option' %>
            <% end %>
          <% end %>
        </div>
        <% @user_group_param_options.each do |user_group_option| %>
          <% if @user_group_param == user_group_option %>
            <% if user_group_option == 'all' %>
              <span>We have <%= User.all.count %> Users</span>
            <% else %>
              <span>We have <%= User.all.where(role: user_group_option).count %> <%= User.all.where(role: user_group_option.capitalize).count > 1 ? user_group_option.pluralize : user_group_option.singularize %></span>
            <% end %>
          <% end %>
        <% end %>
        <div class="query">
          <%= form_tag users_path, method: :get do %>
            <%= text_field_tag :search,
            params[:search],
            class: "form-control",
              placeholder: "Find a user"
              %>
              <%= submit_tag "Search", class: "btn btn-primary d-none" %>
          <% end %>
        </div>
      </div>
      <div class="one-list-navbar padding-top">
        <div class="options">
          <% @time_param_options.each do |time_option| %>
            <% if @time_param == time_option %>
              <%= link_to time_option.capitalize, users_path(user_group: @user_group_param, time: time_option), class: 'option active' %>
            <% else %>
              <%= link_to time_option.capitalize, users_path(user_group: @user_group_param, time: time_option), class: 'option' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="list-container">
      <div class="list-context-container">
        <div class="list-info">
          <span class="list-header set-width">Name</span>
          <span class="list-header set-width">Email</span>
          <span class="list-header set-width">MoveIn - MoveOut</span>
          <span class="list-header details-header set-width">Detail</span>
        </div>
      </div>
      <% @users.each do |user| %>
        <div class="list-context-container">
          <div class="list-info">
            <span class="set-width"><%= user.full_name %></span>
            <span class="set-width"><%= user.email %></span>
            <div class="duration-dates set-width">
              <% if user.bookings.length.positive? %>
                <%= user.bookings.last.move_in.strftime("%d.%m %Y") %> – <%= user.bookings.last.move_out.strftime("%d.%m %Y") %>
              <% end %>
            </div>
            <div class="details d-flex set-width">
              <i class="fas fa-caret-right"></i>
              <i class="fas fa-caret-down d-none"></i>
              <span>Details</span>
            </div>
          </div>
          <div class="list-detail d-none">
            <% if (users_last_booking = user.bookings.last).present?  %>
              <span class="invite-link">
                <% if (booking_process_invite_send = users_last_booking.booking_process_invite_send).present?  %>
                  <p>Booking process invite has been send on the <%= booking_process_invite_send.strftime('%d. %B %Y') %></p>
                  <%= link_to 'send again', booking_send_booking_process_invite_path(users_last_booking), style: 'margin-left: 40px' %>
                <% else %>
                  <%= link_to 'send booking process invite', booking_send_booking_process_invite_path(users_last_booking) %>
                <% end %>
              </span>
            <% end %>
            <table class="user-info">
              <%# if user.has_role?('tenant') %>
                <% if (users_last_booking = user.bookings.last).present? %>
                  <tr>
                    <td>move in:</td>
                    <td><%= users_last_booking.move_in.strftime("%d. %B %Y") %></td>
                  </tr>
                  <tr>
                    <td>move out:</td>
                    <td><%= users_last_booking.move_out.strftime("%d. %B %Y") %></td>
                  </tr>
                <% end %>
              <%# end %>
              <tr>
                <td>Email:</td>
                <td><%= user.email %></td>
              </tr>
              <tr>
                <td>Phone:</td>
                <td><%= user.phone_code %> <%= user.phone_number %></td>
              </tr>
              <tr>
                <td>Prefered Suites:</td>
                <td>
                  <% user.prefered_suites[0...-1].each do |suite| %>
                    <%= suite.roomtype.name %>,
                  <% end %>
                  <% last_prefered_suite = user.prefered_suites.last %>
                  <%= last_prefered_suite.roomtype.name %>
                </td>
              </tr>
              <tr>
                <td>Amount of People:</td>
                <td><%= user.amount_of_people %></td>
              </tr>
              <tr>
                <td>Job:</td>
                <td><%= user.job %></td>
              </tr>
              <% if (gender = user.gender).present? %>
                <tr>
                  <td>Gender:</td>
                  <td><%= gender %></td>
                </tr>
              <% end %>
              <% if (address = user.address).present? %>
                <tr>
                  <td>Address:</td>
                  <td><%= address.address %></td>
                </tr>
              <% end %>
              <tr>
                <td>Date of birth:</td>
                <td><%= user.dob.strftime('%d. %B %Y') %></td>
              </tr>
              <% if (social_links = user.social_links).present? %>
                <tr>
                  <td>Social Media:</td>
                  <td>
                    <% user.social_links[0...-1].each do |link| %>
                      <%= link.name.capitalize %>: <%= link_to "#{link.name}", link.url, target: :_blank %>,
                    <% end %>
                    <% last_social_link = user.social_links.last %>
                    <%= last_social_link.name.capitalize %>: <%= link_to "#{last_social_link.name}", last_social_link.url, target: :_blank %>
                  </td>
                </tr>
              <% end %>
              <tr>
                <td>Applied of the:</td>
                <td><%= user.created_at.strftime('%d. %B %Y') %></td>
              </tr>
              <% if (users_last_booking = user.bookings.last).present? %>
                <td>Booking Id:</td>
                <td><%= users_last_booking.id %></td>
              <% end %>
            </table>
            <%= link_to "Edit #{user.first_name}", edit_user_path(user), class: 'edit-user-button stacey-button' %>
          </div>
        </div>
      <% end %>
      <div class="pagination row">
        <% if @page_count > 1 %>
          <% if @page > 0 && @page == @page_count %>
            <div class="pagination-link">
              <%= link_to "Previous Page", users_path(page: @page - 1), class: "btn btn-red btn-fullsize" %>
            </div>
            <div class="pagination-link">
              <%= link_to "Next Page", users_path(page: @page + 1), class: "btn btn-red btn-fullsize disabled" %>
            </div>
          <% elsif @page == 0 && @page < @page_count %>
            <div class="pagination-link">
              <%= link_to "Previous Page", users_path(page: @page - 1), class: "btn btn-red btn-fullsize disabled" %>
            </div>
            <div class="pagination-link">
              <%= link_to "Next Page", users_path(page: @page + 1), class: "btn btn-red btn-fullsize" %>
            </div>
          <% else %>
            <div class="pagination-link">
              <%= link_to "Previous Page", users_path(page: @page - 1), class: "btn btn-red btn-fullsize" %>
            </div>
            <div class="pagination-link">
              <%= link_to "Next Page", users_path(page: @page + 1), class: "btn btn-red btn-fullsize" %>
            </div>
          <% end %>
        <% else %>
          <p class="list-end">You´ve reached the end of the list</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
