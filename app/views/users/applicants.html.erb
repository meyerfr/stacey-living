<%= render 'shared/navbar' %>

<div class="applicant-overview-container">
  <h3>Currently we have <%= User.all.where(applicant: true).count %> applicants</h3>
  <%= link_to 'Delete old and create new STACEY Users Spreadsheet', applicants_spreadsheet_path %>
  <%#= link_to 'Download as Excel', applicants_index_path(format: :xlsx) %>
  <table class="applicant-overview-table">
    <tr class="row">
      <th class="col">Name</th>
      <th class="col">Email</th>
      <th class="col">Phone</th>
      <th class="col">Sent Payment Link</th>
      <th class="col">Delete</th>
    </tr>
    <% @users.each do |user| %>
      <tr class="row">
        <td class="col"><%= user.first_name %> <%= user.last_name %></td>
        <td class="col"><%= user.email %></td>
        <td class="col"><%= user.phone %></td>
        <% if !user.authentity_token_contract.present? %>
          <td class="col"><%= link_to 'Contract', users_send_invitation_for_contract_pages_path(user: user.id), method: :post %></td>
        <% else %>
          <td class="col"><%= link_to 'Contract again', users_send_invitation_for_contract_pages_path(user: user.id), method: :post %></td>
        <% end %>
        <td class="col"><%= link_to 'delete', user, :method => :delete %></td>
      </tr>
    <% end %>
  </table>
</div>

<% @users.each do |user| %>
  <p style="margin: 0;">User.create(first_name: '<%= user.first_name %>',
    last_name: '<%= user.last_name %>',
    email: '<%= user.email %>',
    phone_code: '<%= user.phone_code %>',
    phone_number: '<%= user.phone %>',
    dob: '<%= user.date_of_birth %>',
    job: '<%= user.job %>',
    <% if user.move_in_date != nil && user.duration_of_stay != nil %>
      move_in: '<%= user.move_in_date %>',
      move_out: '<%= user.duration_of_stay %>',
    <% end %>
    amount_of_people: '<%= user.amount_of_people %>',
    linkedin: '<%= user.linked_in %>',
    facebook: '<%= user.facebook %>',
    twitter: '<%= user.twitter %>',
    instagram: '<%= user.instagram %>',
    prefered_suite: <%= user.prefered_suite %>
  )</p>
<% end %>
