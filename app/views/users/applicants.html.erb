<%= render 'shared/navbar' %>
<div class="applicants-overview-container">
  <h3>Currently we have <%= User.all.where(applicant: true).count %> applicants</h3>
  <ol class="applicant-list">
    <% @users.each do |user| %>
      <li class="applicant-list-item">
        <%= user.first_name %> <%= user.last_name %>,
        <%= user.email %>,
        <%= user.phone_code %> <%= user.phone %>
        <% if user.invited_to_sign_up? %>
          <%= link_to 'Invite again', user_invitation_path(user: user), method: :post, class: 'invite' %>
        <% else %>
          <%= link_to 'Invite', user_invitation_path(user: user), method: :post, class: 'invite' %>
        <% end %>
        <% if !user.authentity_token_contract.present? %>
          <%= link_to 'Contract', users_send_invitation_for_contract_pages_path(user: user.id), method: :post %>
        <% else %>
          <%= link_to 'Contract again', users_send_invitation_for_contract_pages_path(user: user.id), method: :post %>
        <% end %>
        <%= link_to 'Delete', user_path(user), method: :delete %>
      </li>
    <% end %>
  </ol>
</div>
