function addEventListenerToTableTabs() {
  const tableTabsContainer = document.querySelector('.table-tabs')
  if (tableTabsContainer) {
    const tableTabsButton = Array.from(tableTabsContainer.children)
    tableTabsButton.forEach((tab) => {
      tab.addEventListener('click', function(){
        document.querySelectorAll('table.user-info').forEach((table) => {
          table.classList.toggle('d-none');
        })
        tableTabsButton.forEach((tab) => {
          tab.classList.toggle('active')
        })
      })
    })
  }
}

var userInfoModal = document.getElementById('user-info-modal');
userInfoModal.innerHTML = '<%= j render "shared/user_info_modal", user: @user, page: @page %>';
$('.modal').modal('show');
