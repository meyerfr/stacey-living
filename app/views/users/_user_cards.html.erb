<div class="users-card-wrapper">
  <div class="users-card-container">
    <%= link_to user_path(user) do %>
      <div class="users-card-img" style="background-image: linear-gradient(rgba(0,0,0,0) 65%, rgba(0,0,0,0.8) 90%), url('https://kitt.lewagon.com/placeholder/users/random');">
        <div class="users-card-name">
          <h3 class="users-card-name-light"><%= user.first_name %></h3>
          <h3><%= user.last_name %></h3>
        </div>
      </div>
      <div class="users-card-content">
        <span>
          <span class="city">Hamburg</span>
          <span> - </span>
          <span>Apr '19</span>
        </span>
      </div>
    <% end %>
  </div>
</div>
