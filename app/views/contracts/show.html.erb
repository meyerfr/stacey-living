<%= render 'shared/three_steps_navbar', step: step %>
<div class="contract-page-wrapper">
  <div class="contract-page-header">
    <h2>Rental Contract</h2>
  </div>
  <div class="contract-page-container">
    <div class="contract-user-form">
      <span class="info-text">
        Your contract is now generated and ready for you to download.
      </span>
      <strong>
        Please proceed by clicking the button below.
      </strong>
      <%= link_to 'Next Step', new_booking_payment_path(@booking.booking_auth_token, @booking.id), class: 'stacey-button contract-to-payment-button' %>
    </div>
    <div id="pdf">
      <!-- this is loading the contract as PDF -->
      <embed src="/bookings/<%= @booking.booking_auth_token %>/<%= @booking.id %>/contracts/<%= @contract.id %>.pdf" type="application/pdf">
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
