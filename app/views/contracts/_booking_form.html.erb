<div class="booking-form-container">
  <div class="booking-form">
    <%= simple_form_for user, method: :post, route: contract_pdf_path(contract, authentity_token_contract) do |f| %>
      <%= f.input :duration_of_stay, collection: ["3 Months", "4 Months", "5 Months", "6 Months", "7 Months", "8 Months", "9 Months", "9+ Months"], selected: user.duration_of_stay %>
      <%= f.input :move_in_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 1, order: [:day, :month, :year], label: "WHEN DO YOU WANT TO MOVE IN?", required: true, value: user.move_in_date, class: 'date' %>
      <%#= f.submit %>
    <% end %>
  </div>
  <div class="line"></div>
  <div class="booking-form-pricing">
    <div class="info-field rent">
      <p class="header">RENT PER MONTH</p>
      <% if user.duration_of_stay[0].to_i < 4 %>
        <p>€ <%= room.price[0] %> per Month</p>
      <% elsif user.duration_of_stay[0].to_i < 7 %>
        <p>€ <%= room.price[1] %> per Month</p>
      <% else %>
        <p>€ <%= room.price[2] %> per Month</p>
      <% end %>
    </div>
    <div class="info-field deposit">
      <p class="header">REFUNDABLE DEPOSIT</p>
      <% if user.duration_of_stay[0].to_i < 4 %>
        <p>€ <%= room.deposit[0] %></p>
      <% elsif user.duration_of_stay[0].to_i < 7 %>
        <p>€ <%= room.deposit[1] %></p>
      <% else %>
        <p>€ <%= room.deposit[2] %></p>
      <% end %>
    </div>
  </div>
</div>
