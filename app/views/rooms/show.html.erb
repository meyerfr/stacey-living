<%= render 'shared/three_steps_navbar', step: 1 %>
<%#= render 'shared/carousel', pictures: @room.pictures %>

<div class="header-carousel">
  <%= render 'shared/carousel', pictures: @room.photos, carousel_id: "room_banner#{@room.id}", no_buttons: true, no_lightbox_button: false %>
</div>

<div class="wrap-room-show-and-booking-form">
  <div class="room-show-wrapper">
    <div class="section room-basic-infos">
      <h3><%= @room.name %> Suite</h3>
      <%= render 'shared/amenities', amenities: @room.amenities %> <!-- , ameneties: @room.ameneties -->
    </div>
    <div class="section">
      <h3>The Suite</h3>
      <p><%= simple_format(strip_tags(@room.description)) %></p>
      <div class="room-show-photo">
        <% @room.photos.each do |photo| %>
          <a href="<%= url_for(photo) %>" data-lightbox="lightbox_room_show_<%= @room.id %>" data-title="<%= @room.name %>">
            <%= cl_image_tag photo.key %>
          </a>
        <% end %>
        <div class="lightbox-button">
          <%= image_tag 'camera.png' %>
        </div>
      </div>
      <!-- Room Photos, display all -->
    </div>
    <div class="section">
      <h3>The location</h3>
      <p><%= simple_format(strip_tags(@room.project.description)) %></p>
      <!-- image of project -->
    </div>
    <div class="section">
      <h3>What Is The Coliving Buzz All About?</h3>
      <div class="text">
        <span>Our members enjoy their individual private suites whilst sharing beautiful common spaces.</span><br>
        <span>Everything you need is included in one convenient payment: Rent, furniture, internet, utilities, cleaning, events, Netflix + Spotify in the common spaces and even the GEZ.</span><br>
        <span>Do not take our word for granted, move in and experience the STACEY way of living!</span>
      </div>
    </div>
  </div>
  <%= render 'shared/booking_form', booking: @booking, room: @room, room_availability: @room_availability %>
</div>



<!-- for the booking form we need the calendar info. Meening we need to know during which times the room is not available. -->
<%#= render 'shared/booking_form', flat: @flat, room: @room, user: @user, booking: @booking, authentity_token_contract: @authentity_token_contract, contract: @contract %>
