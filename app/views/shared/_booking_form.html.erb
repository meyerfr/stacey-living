<div class="booking-form-wrapper">
  <div class="booking-form-section">
    <%= simple_form_for booking, method: :put, url: wizard_path do |f| %>
      <div class="form-group">
        <%= f.label :move_in, label: 'WHEN DO YOU WANT TO MOVE IN?' %>
        <%#= f.collection_select(:room, :room_id, room_availability, :id, :name) %>
      </div>
      <%= f.select(:room_id, room_availability.map { |id, time| [time, id] }) %>
      <%#= f.label 'WHEN DO YOU WANT TO MOVE IN?' %>
      <%# room_availability.each do |room_id, availability| %>
        <!-- <p><%#= room_id %> is available on the <%#= availability %></p> -->
      <%# end %>
      <%= f.input :move_out, as: :date, order: [:day, :month, :year], start_year: (Date.today + 3.months).year, end_year: (Date.today + 3.months).year + 1, selected: room_availability.values.first.to_date + 3.months, label: 'UNTIL WHEN ARE YOU PLANING TO STAY?' %>
      <%#= f.hidden_field :move_in, class: 'hidden-move-in', value: room_availability.values.first %>
      <%= f.submit 'BOOK', name: 'room', class: 'stacey-button reverse-hover book-button' %>
      <%#= f.submit 'BOOK', value: room, class: 'stacey-button reverse-hover book-button' %>
    <% end %>
  </div>
  <div class="booking-form-section pricing">
    <div class="info-field">
      <!-- this must be the rent of the month -->
      <span class="header">rent per month</span>
      <span class="content"><%= roomtype.prices.first.amount % 1 == 0 ? roomtype.prices.first.amount.to_i : roomtype.prices.first.amount %> â‚¬</span>
    </div>
    <div class="info-field">
      <span class="header">refundable deposit</span>
      <span class="content">2 month rent</span>
    </div>
  </div>
</div>
