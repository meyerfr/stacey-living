      <div class="line"></div>
      <span class="ring active"><%= 2 %></span>
      <div class="line"></div>
      <span class="ring"><%= 3 %></span>
    <% elsif step == 'payment' %>
      <span class="ring active"><%= 1 %></span>
      <div class="line"></div>
      <span class="ring active"><%= 2 %></span>
