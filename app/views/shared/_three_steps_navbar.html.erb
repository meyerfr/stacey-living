<div class="three-steps-navbar no-navbar">
  <!-- <div class="three-steps-navbar-container"> -->
  <%= link_to "http://www.stacey.de", class: "three-steps-navbar-logo", target: :_blank do %>
    <%= image_tag "stacey_logo_pink.png" %>
  <% end %>
    <% if step == 1 %>
      <span class="ring active"><%= 1 %></span>
      <div class="line"></div>
      <span class="ring"><%= 2 %></span>
      <div class="line"></div>
      <span class="ring"><%= 3 %></span>
    <% elsif step == 2 %>
      <span class="ring active"><%= 1 %></span>
      <div class="line active"></div>
      <span class="ring active"><%= 2 %></span>
      <div class="line"></div>
      <span class="ring"><%= 3 %></span>
    <% else %>
      <span class="ring active"><%= 1 %></span>
      <div class="line active"></div>
      <span class="ring active"><%= 2 %></span>
      <div class="line active"></div>
      <span class="ring active"><%= 3 %></span>
    <% end %>
  <!-- </div> -->
  <% if @room %>
    <%= link_to 'Availabilities', bookings_path(@room.name.delete(' ').downcase), remote: true, id: 'booking_calendar' %>
  <% else %>
    <%= link_to 'Availabilities', bookings_path, remote: true, id: 'booking_calendar' %>
  <% end %>
</div>
