<table class="user-info" id="user-info">
  <% if (users_last_booking = user.bookings.last).present? %>
    <tr>
      <td>move in:</td>
      <td><%= users_last_booking.move_in.strftime("%d. %B %Y") %></td>
    </tr>
    <tr>
      <td>move out:</td>
      <td><%= users_last_booking.move_out.strftime("%d. %B %Y") %></td>
    </tr>
  <% end %>
  <tr>
    <td>Email:</td>
    <td><%= mail_to user.email %></td>
  </tr>
  <tr>
    <td>Phone:</td>
    <td><%= user.phone_code %> <%= user.phone_number %></td>
  </tr>
  <!-- prefered_suites -->
  <% if user.prefered_suites.present? %>
    <tr>
      <td>Prefered Suites:</td>
      <td>
        <% user.prefered_suites[0...-1].each do |suite| %>
          <%= suite.roomtype.name %>,
        <% end %>
        <% last_prefered_suite = user.prefered_suites.last %>
        <%= last_prefered_suite.roomtype.name %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td>Amount of People:</td>
    <td><%= user.amount_of_people %></td>
  </tr>
  <tr>
    <td>Job:</td>
    <td><%= user.job %></td>
  </tr>
  <% if (gender = user.gender).present? %>
    <tr>
      <td>Gender:</td>
      <td><%= gender %></td>
    </tr>
  <% end %>
  <!-- address -->
  <% if (address = user.address).present? %>
    <tr>
      <td>Address:</td>
      <td><%= address.address %></td>
    </tr>
  <% end %>
  <tr>
    <td>Date of birth:</td>
    <td><%= user.dob.strftime('%d. %B %Y') %></td>
  </tr>
  <!-- social_links -->
  <% if (social_links = user.social_links).present? %>
    <tr>
      <td>Social Media:</td>
      <td>
        <% user.social_links[0...-1].each do |link| %>
          <%= link.name.capitalize %>: <%= link_to "#{link.name}", link.url, target: :_blank %>,
        <% end %>
        <% last_social_link = user.social_links.last %>
        <%= last_social_link.name.capitalize %>: <%= link_to "#{last_social_link.name}", last_social_link.url, target: :_blank %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td>Applied of the:</td>
    <td><%= user.created_at.strftime('%d. %B %Y') %></td>
  </tr>
  <% if (users_last_booking = user.bookings.last).present? %>
    <td>Booking Id:</td>
    <td><%= users_last_booking.id %></td>
  <% end %>
</table>
