<div id="carouselExampleIndicators-<%= carousel_id %>" class="carousel slide" data-ride="" data-interval='4000' data-hover="true">
  <ol class="carousel-indicators">
    <% pictures.each_with_index do |picture, idx| %>
      <% if idx == 0 %>
        <li data-target="#carouselExampleIndicators-<%= carousel_id %>" data-slide-to="<%= idx %>" class="active"></li>
      <% else %>
        <li data-target="#carouselExampleIndicators-<%= carousel_id %>" data-slide-to="<%= idx %>"></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <!-- first picture must get class active -->
    <% pictures.each_with_index do |picture, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <!-- must be picture -->
          <!-- <div class="photo" style="background-ismage: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%#= image_path picture.url, crop: :fill %>');">
          </div> -->
          <div class="photo">
            <a href="<%= url_for(picture) %>" data-lightbox="lightbox<%= carousel_id %>" data-title="My caption" style="width: 100%">
              <%= cl_image_tag picture.key, style: 'width: 100%' %>
            </a>
            <%#= cl_image_tag picture.key, style: 'width: 100%' %>
          </div>
        </div>
      <% else %>
        <div class="carousel-item">
          <!-- <div class="photo" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%#= image_path picture.url, crop: :fill %>');">
          </div> -->
          <div class="photo">
            <a href="<%= url_for(picture) %>" data-lightbox="lightbox<%= carousel_id %>" data-title="My caption" style="width: 100%">
              <%= cl_image_tag picture.key, style: 'width: 100%' %>
            </a>
            <%#= cl_image_tag picture.key, style: 'width: 100%' %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators-<%= carousel_id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true" style="background-image: url(data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' f…3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E);"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators-<%= carousel_id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true" style="background-image: url(data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' f…3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E);"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
